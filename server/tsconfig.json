{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015", "es5", "dom"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}